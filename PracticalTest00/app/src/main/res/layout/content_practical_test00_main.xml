<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_practical_test00_main"
    tools:context="ro.pub.cs.systems.eim.practicaltest00.PracticalTest00MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate to secondary activity"
        android:id="@+id/toSecond"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_below="@+id/toSecond"
        android:gravity="center"
        android:rowCount="6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/toSecond"
        android:layout_alignEnd="@+id/toSecond"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="spacingWidthUniform"
        android:numColumns="auto_fit">

        <EditText
            android:layout_width="178dp"
            android:layout_height="50dp"
            android:id="@+id/text1"
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:textAlignment="center"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/text2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:textAlignment="center"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click me!"
            android:textAlignment="center"
            android:id="@+id/button1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:onClick="count" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click me too!"
            android:textAlignment="center"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:onClick="count" />


    </GridLayout>


</RelativeLayout>
